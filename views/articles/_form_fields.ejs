<div class="form-group">
	<label for="title">Title</label>
	<input required value="<%=article.title%>" type="text" name="title" id="title" class="form-control">
</div>

<!-- The difference between text-area and input is that "input is a one liner" and doesn't allow you to press ENTER i.e go to the next line -->

<div class="form-group">
	<label for="description">Description</label>
	<textarea name="description" id="description" class="form-control" required> <%=article.description%>  
	</textarea>
</div>

<div class="form-group">
	<label for="markdown">Markdown</label>
	<textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
  </div>


<!-- Brings us back to the homepage -->
<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>